<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:stretchColumns="0">

    <TableRow
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_span="4"
            android:text="Order your Favorite Pizza"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:textSize="20sp"/>

    </TableRow>

    <TableRow
        android:layout_marginBottom="20dp">

        <View
            android:layout_span="4"
            android:layout_height="2dp"
            android:background="#00B" />

    </TableRow>

    <TableRow
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_column="1"
            android:text=" Cheese "
            android:textStyle="bold" />

        <TextView
            android:text=" Olives "
            android:textStyle="bold" />

        <TextView
            android:text=" Mushrooms "
            android:textStyle="bold" />

    </TableRow>

    <TableRow>

        <RadioButton
            android:id="@+id/radioButtonNeapolitan"
            android:text="Neapolitan"
            android:onClick="radioButtonPizzaName_onClick" />

        <CheckBox
            android:checked="true" />

        <CheckBox />

        <CheckBox />

    </TableRow>

    <TableRow>

        <RadioButton
            android:id="@+id/radioButtonSicilian"
            android:text="Sicilian"
            android:onClick="radioButtonPizzaName_onClick" />

        <CheckBox
            android:checked="true" />

        <CheckBox />

        <CheckBox />

    </TableRow>

    <TableRow>

        <RadioButton
            android:id="@+id/radioButtonBalkan"
            android:text="Balkan"
            android:onClick="radioButtonPizzaName_onClick" />

        <CheckBox
            android:checked="true" />

        <CheckBox />

        <CheckBox />

    </TableRow>

    <TableRow>

        <RadioButton
            android:id="@+id/radioButtonGourmet"
            android:text="Gourmet"
            android:onClick="radioButtonPizzaName_onClick" />

        <CheckBox
            android:checked="true" />

        <CheckBox />

        <CheckBox />

    </TableRow>

</TableLayout>