<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewRegister"
        android:text="Register"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewFullName"
        android:text="Full Name: "
        android:textSize="25sp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/textViewRegister" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextFullName"
        android:background="#888"
        android:textSize="25sp"
        android:layout_alignBaseline="@+id/textViewFullName"
        android:layout_toRightOf="@+id/textViewFullName"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: "
        android:id="@+id/textViewEmail"
        android:textSize="25sp"
        android:layout_below="@+id/textViewFullName"
        android:layout_alignLeft="@+id/textViewFullName"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextEmail"
        android:background="#888"
        android:textSize="25sp"
        android:layout_alignBaseline="@+id/textViewEmail"
        android:layout_alignLeft="@+id/editTextFullName" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:layout_below="@+id/editTextEmail"
        android:layout_alignRight="@+id/editTextEmail"
        android:layout_marginTop="10dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I agree to the terms and conditions"
        android:layout_alignParentBottom="true" />

</RelativeLayout>